@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>ASP.NET</h1>
    <p class="lead">ASP.NET is a free web framework for building great Web sites and Web applications using HTML, CSS and JavaScript.</p>
    <p><a href="https://asp.net" class="btn btn-primary btn-lg">Learn more &raquo;</a></p>
</div>

<div class="row">
    <div class="col-md-4">
        <h2>Excepción 1</h2>
        <p><a class="btn btn-default" id="excepcion1" href="#">Excepción 1</a></p>
    </div>
    <div class="col-md-4">
        <h2>Excepción 2</h2>
        <p><a class="btn btn-default" id="excepcion2" href="#">Excepción 2</a></p>
    </div>
    <div class="col-md-4">
        <h2>Excepción 3</h2>
        <p><a class="btn btn-default" id="excepcion3" href="#">Excepción 3</a></p>
    </div>
</div>

<script type="text/javascript">
    $(function () {
        var url = window.location.href;
        url = url.split('/');
        if (url.indexOf("Home") > -1) {
            url = url[0] + '//' + url[2] + '/' + url[3];
        }
        else {
            url = url[0] + '//' + url[2] + '/Home';
        }
        $("#excepcion1").click(function (e) {
            e.preventDefault();
            $.get(url+"/Exception1");
        });

        $("#excepcion2").click(function (e) {
            e.preventDefault();
            $.get(url+"/Exception2");
        });

        $("#excepcion3").click(function (e) {
            e.preventDefault();
            $.get(url+"/Exception3");
        });
    })
</script>